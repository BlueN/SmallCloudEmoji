<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >


    <fragment class="org.sorz.lab.smallcloudemoji.fragments.SettingsFragment"
        android:id="@+id/settings_frag"
        android:layout_width="500dp"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pref_source_manage_title"
            style="?android:attr/listSeparatorTextViewStyle" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/settings_container" >

            <fragment class="org.sorz.lab.smallcloudemoji.fragments.RepositoryFragment"
                android:id="@+id/repository_frag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </FrameLayout>


    </LinearLayout>


</LinearLayout>